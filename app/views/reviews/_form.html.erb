<!-- app/views/reviews/new.html.erb -->
<%= simple_form_for([offer, review], data: { insert_in_list_target: 'form', action: 'submit->insert-in-list#send' }) do |f| %>
  <%= f.input :title %>
  <%= f.input :content %>
  <%= f.input :rating, as: :integer %>
  <%= f.submit "Submit review", class: "btn btn-dark" %>
<% end %>
