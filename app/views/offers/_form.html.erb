<%= simple_form_for [@offer] do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :price, as: :integer %>
  <%= f.input :number_of_people, as: :integer %>
  <%= f.input :category, collection: Offer::CATEGORY %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.button :submit, class: 'btn btn-flat' %>
<% end %>
