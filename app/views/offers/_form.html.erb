<%= simple_form_for [@offer] do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :price, as: :integer %>
  <%= f.input :number_of_people, as: :integer %>
  <%= f.input :category, collection: Offer::CATEGORY %>
  <%= f.input :photo, as: :file %>
  <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>
