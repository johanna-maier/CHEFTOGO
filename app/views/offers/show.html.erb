<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @offer.photo.key, crop: :fill %>')">
  <div class="container">
    <h1><%= @offer.title %></h1>
    <p><%= @offer.description %></p>
    <a class="btn btn-flat" href="#">Book now</a>
  <span class='person-tag'><%= pluralize(@offer.number_of_people, 'person') %></span>
  <span class='category-tag'><%= @offer.category %></span>
  <span class='price-tag'><%= @offer.price.round %>EUR/pers</span>
  </div>
</div>

<%= link_to "Back to offers", offers_path %>
<%= link_to "Edit this offer", edit_offer_path %>
<%= link_to "Delete this offer",
             offer_path(@offer),
             method: :delete,
             data: { confirm: "Are you sure?" } %>
