<div class="review-container" >
  <ul data-insert-in-list-target="items">
    <% offer.reviews.each do |review| %>
      <div class="review-card">
        <li id="review-<%="#{review.id + 1}"%>">
          <span class="anchor"></span>
          <%= review.title %> |
          <% review.rating.to_i.times do  %>
            ‚≠ê
          <% end %> |

          <em>
            by <%= review.user.first_name %>
            <%= link_to "(Remove review)",
                      review_path(review),
                      method: :delete,
                      data: { confirm: "Are you sure?" } %>
          </em>
        </li>

        <li>
          "<%= review.content %>"
        </li>
      </div>
    <% end %>
  </ul>
</div>
