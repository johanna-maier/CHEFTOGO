<%= link_to offer_path(booking.offer) do %>
  <div class="container card-category" style="background-image: linear-gradient(rgba(243,243,243,0.8), rgba(243,243,243,0.9)), url(<%= cl_image_path booking.offer.photos.first.key %>);">

    <div class="d-flex flex-column justify-content-around card-infos">
      <h2><%= booking.offer.title %></h2><br>
      <div class="d-flex justify-content-between">
        <p><%= booking.start_time.to_s.slice(11..15) %> | <%= booking.booking_date %></p>
        <p>with: <strong><%= booking.offer.user.first_name %></strong></p>
      </div>
      <div class="d-flex justify-content-between">
        <p><%= booking.address %></p>

        <%= link_to "Cancel",
             booking_path(booking), class: "btn btn-transparent",
             method: :delete,
             data: { confirm: "Are you sure you want to cancel this booking?" } %>
      </div>
    </div>
  </div>
<% end %>
